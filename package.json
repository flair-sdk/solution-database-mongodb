{
  "name": "@flair-sdk/solution-database-mongodb",
  "version": "0.0.6",
  "private": false,
  "description": "Bundled solution to add MongoDB database sync to a Flair indexing cluster",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "typings": "./dist/types/index.d.ts",
  "scripts": {
