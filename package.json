    "flair-sdk": "^1.7.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "rome": "^12.1.3",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6"
